@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentSechduler.Models.ApplicationUser> singnInManager

    @if(singnInManager.IsSignedIn(User))
    {
        <form method="post" id="logOut" asp-action="LogOut" asp-controller="Account">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white"> Hello,@User.Identity.Name</a></li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="javascript:document.getElementById('logOut').submit()">Logout</a>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul class="nav navbar-nav">

            <li class="nav-item">
                <a class="nav-link text-white" asp-action="Register" asp-controller="Account" id="registerLink" >Register</a>
           </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-action="Login" asp-controller="Account" id="loginLink" >Login</a>
           </li>

        </ul>
    }