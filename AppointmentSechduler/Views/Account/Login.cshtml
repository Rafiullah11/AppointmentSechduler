@model AppointmentSechduler.Models.ViewModels.LoginViewModel

<div class ="container pt-3">
    <div class="row offset-3">
    <div class="border pt-4 col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-action="Login" asp-controller="Account" >
                <h4 class="text-center pt-3 pb-2"> Login</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group offset-2">
                    <label asp-for="Email" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group offset-2">
                    <label asp-for="Password" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input type="password" asp-for="Password" class="form-control"  />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group offset-2">
                    <div class="col-md-10  checkbox ">
                    <label asp-for="RememberMe" class=" p-lg-0">
                        <input asp-for="RememberMe"/>
                    </label>
                    Remember me
                    </div>
                </div>
                <div class="form-group offset-2">
                    <div class="col-md-10 pb-2">
                        <input type="submit" class=" btn btn-primary btn-block " value="Login" />
                     </div>
                     <div class="col-md-10">

                        <a asp-action="Register" asp-controller="Account" class="text-primary "> Not yet have an account register</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
</div>

